record(stringout, "SR-DMS4AP{LOCALBUMP}DEV:Sel-SP"){
    field(DESC, "selected insertion device for local bump")
    field(VAL, "NULL")
}
# nearby 6 BPMs
record(waveform, "SR-DMS4AP{LOCALBUMP:BPM}Pos-I"){
    field(DESC, "s location surround selected ID")
    field(FTVL, "DOUBLE")
    field(NELM, "6")
}
record(waveform, "SR-DMS4AP{LOCALBUMP:BPM}ORB:X-I"){
    field(DESC, "X orbit surround selected ID")
    field(FTVL, "DOUBLE")
    field(NELM, "6")
}
record(waveform, "SR-DMS4AP{LOCALBUMP:BPM}ORB:Y-I"){
    field(DESC, "Y orbit surround selected ID")
    field(FTVL, "DOUBLE")
    field(NELM, "6")
}
# nearby 4 correctors, for both X & Y
record(waveform, "SR-DMS4AP{LOCALBUMP:HCOR}Pos-I"){
    field(DESC, "hcor s location surround selected ID")
    field(FTVL, "DOUBLE")
    field(NELM, "4")
}
record(waveform, "SR-DMS4AP{LOCALBUMP:VCOR}Pos-I"){
    field(DESC, "vcor s location surround selected ID")
    field(FTVL, "DOUBLE")
    field(NELM, "4")
}
record(waveform, "SR-DMS4AP{LOCALBUMP:HCOR}PS-I"){
    field(DESC, "Current surround selected ID")
    field(FTVL, "DOUBLE")
    field(NELM, "4")
}
record(waveform, "SR-DMS4AP{LOCALBUMP:HCOR}PS-Delta:I"){
    field(DESC, "changes to be made")
    field(FTVL, "DOUBLE")
    field(NELM, "4")
}
record(waveform, "SR-DMS4AP{LOCALBUMP:VCOR}PS-I"){
    field(DESC, "Current surround selected ID")
    field(FTVL, "DOUBLE")
    field(NELM, "4")
}
record(waveform, "SR-DMS4AP{LOCALBUMP:VCOR}PS-Delta:I"){
    field(DESC, "changes to be made")
    field(FTVL, "DOUBLE")
    field(NELM, "4")
}
# source point for insertion local bump
record(ao, "SR-DMS4AP{LOCALBUMP}S-SP"){
    field(DESC, "s for local bump source point")
}
record(mbbo, "SR-DMS4AP{LOCALBUMP}PLANE-SP"){
    field(DESC, "PLANE for local bump source point")
    field(ZRST, "XY Plane")
    field(ONST, "X Plane")
    field(TWST, "Y Plane")
}
record(ao, "SR-DMS4AP{LOCALBUMP}SHIFT:X-SP"){
    field(DESC, "X plane shift at source point")
    field(VAL, 0.0)
    field(EGU, "mm")
}
record(ao, "SR-DMS4AP{LOCALBUMP}SHIFT:Y-SP"){
    field(DESC, "Y plane shift at source point")
    field(VAL, 0.0)
    field(EGU, "mm")
}
record(ao, "SR-DMS4AP{LOCALBUMP}ANGLE:X-SP"){
    field(DESC, "X plane angle at source point")
    field(VAL, 0.0)
    field(EGU, "mrad")
}
record(ao, "SR-DMS4AP{LOCALBUMP}ANGLE:Y-SP"){
    field(DESC, "Y plane angle at source point")
    field(VAL, 0.0)
    field(EGU, "mrad")
}
# command to apply
record(bo, "SR-DMS4AP{LOCALBUMP}Enbl-Cmd"){
    field(DESC, "Apply predicated local bump")
    field(VAL, 0)
    field(ZNAM, "Idle")
    field(ONAM, "Applying")
}
record(stringin, "SR-DMS4AP{LOCALBUMP}TS-I"){
    field(DESC, "Last time of local bump.")
    field(VAL, "Not Yet since Last Server Reboot.")
}
